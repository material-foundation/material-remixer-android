<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/headerBackground"
  android:elevation="@dimen/remixer_header_elevation"
  android:gravity="center"
  android:orientation="horizontal">

  <ImageView
    android:id="@+id/closeButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:src="@drawable/ic_close_black_24dp"
    />

  <TextView
    style="@style/RemixerHeaderText"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="@dimen/defaultPadding"
    android:text="@string/remixer_framework_name"
    />

  <Button
    android:id="@+id/shareLinkButton"
    style="@style/Widget.AppCompat.Button.Borderless.Colored"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/sharedStatusText"
    android:visibility="gone"/>

  <ImageView
    android:id="@+id/expandSharingOptionsButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:src="@drawable/ic_expand_more_black_24dp"
    android:visibility="gone"
    />
</LinearLayout>
