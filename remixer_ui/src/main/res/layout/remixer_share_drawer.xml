<com.google.android.libraries.remixer.ui.view.RemixerShareDrawer
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:elevation="@dimen/remixer_header_elevation"
  android:orientation="vertical"
  android:padding="@dimen/defaultPadding"
  tools:ignore="UnusedAttribute">

  <Switch
    android:id="@+id/sharingSwitch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="start"
    android:text="@string/sharingStatusOffText"
    android:textAppearance="@style/RemixerConfigText"/>

  <TextView
    android:id="@+id/sharingDetailText"
    style="@style/RemixerVariableText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:maxLines="2"
    android:minLines="1"
    android:text="@string/sharingWarningText"
    android:visibility="gone"/>

  <Button
    android:id="@+id/shareLinkButton"
    style="@style/Widget.AppCompat.Button.Borderless.Colored"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:text="@string/shareLink"
    android:visibility="gone"/>
</com.google.android.libraries.remixer.ui.view.RemixerShareDrawer>
