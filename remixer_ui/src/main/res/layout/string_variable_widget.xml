<com.google.android.libraries.remixer.ui.widget.StringVariableWidget
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="@dimen/secondaryPadding"
  android:layout_marginTop="@dimen/secondaryPadding">

  <TextView
    android:id="@+id/variableName"
    style="@style/RemixerVariableText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"/>

  <EditText
    android:id="@+id/stringVariableText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/variableName"
    android:inputType="textMultiLine"
    android:maxLines="3"
    android:padding="@dimen/secondaryPadding"/>

</com.google.android.libraries.remixer.ui.widget.StringVariableWidget>
