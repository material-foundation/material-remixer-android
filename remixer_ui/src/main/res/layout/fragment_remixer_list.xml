<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/remixerContainer"
  android:name="com.google.android.libraries.remixer.view.RemixerFragment"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:theme="@style/AppTheme"
  tools:context="com.google.android.libraries.remixer.ui.view.RemixerFragment">

  <include android:id="@+id/remixerHeader" layout="@layout/remixer_header"/>

  <android.support.v7.widget.RecyclerView
    android:id="@+id/remixerList"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/remixerHeader"
    android:padding="@dimen/defaultPadding"
    app:layoutManager="LinearLayoutManager"/>

</RelativeLayout>
